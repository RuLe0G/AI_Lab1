<Window x:Class="AI_Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Загрузить файлы" Command="{Binding LoadFilesCommand}" Width="200" Margin="10" />
            <TextBox x:Name="LogConsole" IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True" Height="200" Width="500"
                     Text="{Binding LogText, Mode=OneWay}" TextWrapping="Wrap"
                     Background="Black" Foreground="White" />
        </StackPanel>
    </Grid>
</Window>